<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= typeof title !== 'undefined' ? title : '电影列表 - 电影网站' %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <%- include('../partials/header') %>
    
    <div class="container-fluid movies-layout">
        <div class="row">
                <div class="col-12">
                
            </div>
        </div>

        <div class="row g-3 mt-1">
            <main class="col-12">
                <div class="movies-page">
                    <div class="centered-container">
                    <div class="movies-page-header d-flex justify-content-between align-items-center flex-wrap mb-3">
                        <h1 class="page-title mb-2 mb-md-0">
                            <i class="bi bi-collection-play"></i> 电影列表
                        </h1>
                    </div>

                    <% if (typeof dbConnected !== 'undefined' && dbConnected === false) { %>
                        <div class="alert alert-warning">
                            <i class="bi bi-exclamation-triangle"></i> 无法连接到数据库，影片数据不可用。
                        </div>
                    <% } else { %>
                        <!-- 筛选器（Chip 风格） -->
                        <div class="filters-bar">
                            <form id="filtersForm" action="/movies" method="GET">
                                <input type="hidden" name="genre" id="filter-genre" value="<%= selectedGenre || '' %>">
                                <input type="hidden" name="region" id="filter-region" value="<%= selectedRegion || '' %>">
                                <input type="hidden" name="year" id="filter-year" value="<%= selectedYear || '' %>">
                                <div class="filter-row">
                                    <div class="filter-label">类型</div>
                                    <div class="filter-chips">
                                        <button type="button" class="filter-chip <%= !selectedGenre ? 'active' : '' %>" data-name="genre" data-value="">全部</button>
                                        <% genres.forEach(g => { %>
                                            <button type="button" class="filter-chip <%= selectedGenre === g ? 'active' : '' %>" data-name="genre" data-value="<%= g %>"><%= g %></button>
                                        <% }); %>
                                    </div>
                                </div>

                                <div class="filter-row">
                                    <div class="filter-label">地区</div>
                                    <div class="filter-chips">
                                        <button type="button" class="filter-chip <%= !selectedRegion ? 'active' : '' %>" data-name="region" data-value="">全部</button>
                                        <% regions.forEach(r => { %>
                                            <button type="button" class="filter-chip <%= selectedRegion === r ? 'active' : '' %>" data-name="region" data-value="<%= r %>"><%= r %></button>
                                        <% }); %>
                                    </div>
                                </div>

                                <div class="filter-row">
                                    <div class="filter-label">年份</div>
                                    <div class="filter-chips">
                                        <button type="button" class="filter-chip <%= !selectedYear ? 'active' : '' %>" data-name="year" data-value="">全部</button>
                                        <% years.forEach(y => { %>
                                            <button type="button" class="filter-chip <%= (selectedYear == y) ? 'active' : '' %>" data-name="year" data-value="<%= y %>"><%= y %></button>
                                        <% }); %>
                                    </div>
                                </div>
                            </form>
                        </div>

                        <!-- 电影列表 -->
                        <div class="movies-grid mt-3">
                            <% if (!movies || movies.length === 0) { %>
                                <div class="alert alert-info">
                                    <i class="bi bi-info-circle"></i> 没有找到符合条件的电影
                                </div>
                            <% } else { %>
                                <div class="row g-3 g-md-4">
                                    <% movies.forEach(movie => { %>
                                        <div class="col-6 col-md-4 col-lg-3">
                                            <div class="movie-card-small dark-card">
                                                <div class="movie-poster-placeholder-small">
                                                    <% var localPoster = '/images/' + movie.id + '.jpg'; var fallback = movie.poster_url ? movie.poster_url : '/images/index1.jpg'; %>
                                                    <img src="<%= localPoster %>" alt="<%= movie.title %>" class="movie-poster-img" onerror="this.onerror=null; this.src='<%= fallback %>'" />
                                                </div>
                                                <div class="movie-info-small">
                                                    <h6 class="movie-title-small"><%= movie.title %></h6>
                                                    <p class="movie-rating-small">
                                                        <i class="bi bi-star-fill"></i> <%= movie.rating %>
                                                    </p>
                                                    <p class="movie-year-small">
                                                        <i class="bi bi-calendar"></i> <%= movie.year %>
                                                    </p>
                                                    <a href="/movies/<%= movie.id %>" class="btn btn-sm btn-outline-light w-100">查看详情</a>
                                                </div>
                                            </div>
                                        </div>
                                    <% }); %>
                                </div>
                            <% } %>
                        </div>
                    <% } %>
                </div>
            </main>


        </div>
    </div>
    
    <%- include('../partials/footer') %>
    
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/main.js"></script>
</body>
</html>
