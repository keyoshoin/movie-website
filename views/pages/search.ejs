<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= typeof title !== 'undefined' ? title : '搜索结果 - 电影网站' %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <%- include('../partials/header') %>
    
    <div class="container-fluid">
        <div class="row">
            
            <main class="col-lg-9 col-md-8 col-12">
                <div class="search-page">
                    <h1 class="page-title mb-4">
                        <i class="bi bi-search"></i> 搜索结果
                    </h1>

                    <div class="search-results">
                        <% if (typeof searchKeyword !== 'undefined' && searchKeyword) { %>
                            <p class="mb-3">搜索关键词: <strong><%= searchKeyword %></strong></p>
                        <% } %>
                        <% if (typeof movies !== 'undefined' && movies.length > 0) { %>
                            <p class="mb-3">找到 <strong><%= movies.length %></strong> 部相关电影</p>
                            <div class="row g-4">
                                <% movies.forEach(movie => { %>
                                    <div class="col-lg-3 col-md-4 col-6">
                                        <div class="movie-card-small">
                                            <div class="movie-poster-placeholder-small">
                                                <% var localPoster = '/images/' + movie.id + '.jpg'; var fallback = movie.poster_url ? movie.poster_url : '/images/index1.jpg'; %>
                                                <img src="<%= localPoster %>" alt="<%= movie.title %>" class="movie-poster-img" onerror="this.onerror=null; this.src='<%= fallback %>'" />
                                            </div>
                                            <div class="movie-info-small">
                                                <h6 class="movie-title-small"><%= movie.title %></h6>
                                                <p class="movie-rating-small">
                                                    <i class="bi bi-star-fill"></i> <%= movie.rating %>
                                                </p>
                                                <a href="/movies/<%= movie.id %>" class="btn btn-sm btn-outline-primary w-100">查看详情</a>
                                            </div>
                                        </div>
                                    </div>
                                <% }); %>
                            </div>
                        <% } else { %>
                            <div class="alert alert-warning">
                                <i class="bi bi-exclamation-triangle"></i> 没有找到相关电影，请尝试其他关键词
                            </div>
                        <% } %>
                    </div>
                </div>
            </main>
            
            <%- include('../partials/aside') %>
        </div>
    </div>
    
    <%- include('../partials/footer') %>
    
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/main.js"></script>
</body>
</html>
